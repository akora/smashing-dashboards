<% content_for(:title) { "Countdowns" } %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Countdown" data-title="End of year 2019" data-end="31-Dec-2019 23:59:59" style="background-color: #01579b;"><!-- LightBlue 900 --></div>
    </li>
    <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
      <div data-view="Countdown" data-title="End of year 2020" data-end="31-Dec-2020 23:59:59" style="background-color: #0277bd;"><!-- LightBlue 800 --></div>
    </li>
    <li data-row="1" data-col="3" data-sizex="1" data-sizey="1">
      <div data-view="Countdown" data-title="End of year 2021" data-end="31-Dec-2021 23:59:59" style="background-color: #0288d1;"><!-- LightBlue 700 --></div>
    </li>
    <li data-row="1" data-col="4" data-sizex="1" data-sizey="1">
      <div data-view="Countdown" data-title="Eszter's Nameday" data-end="24-May-2019 00:00:00" style="background-color: #039be5;"><!-- LightBlue 600 --></div>
    </li>
    <li data-row="2" data-col="4" data-sizex="1" data-sizey="1">
      <div data-view="localTime" data-title="Local Time" style="background-color: #37474f;"><!-- BlueGrey 800 --></div>
    </li>
  </ul>
</div>
