<% content_for(:title) { "Crypto" } %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="btcprice" data-view="Number" data-title="BTC" data-subtitle="Bitcoin" data-moreinfo="USD" style="background-color:#3e2723;"><!-- Brown 900 --></div>
    </li>
    <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="ethprice" data-view="Number" data-title="ETH" data-subtitle="Ethereum" data-moreinfo="USD" style="background-color:#5d4037;"><!-- Brown 700 --></div>
    </li>
    <li data-row="1" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="liteprice" data-view="Number" data-title="LTC" data-subtitle="Litecoin" data-moreinfo="USD" style="background-color:#795548;"><!-- Brown 500 --></div>
    </li>
    <li data-row="1" data-col="4" data-sizex="1" data-sizey="1">
      <div data-id="batprice" data-view="Number" data-title="BAT" data-subtitle="Basic Attention Token" data-moreinfo="USD" style="background-color:#a1887f;"><!-- Brown 300 --></div>
    </li>
    <li data-row="2" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="bchprice" data-view="Number" data-title="BCH" data-subtitle="Bitcoin Cash" data-moreinfo="USD" style="background-color:#3e2723;"><!-- Brown 900 --></div>
    </li>
    <li data-row="2" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="zecprice" data-view="Number" data-title="ZEC" data-subtitle="Zcash" data-moreinfo="USD" style="background-color:#5d4037;"><!-- Brown 700 --></div>
    </li>
    <li data-row="2" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="xrpprice" data-view="Number" data-title="XRP" data-subtitle="Ripple" data-moreinfo="USD" style="background-color:#795548;"><!-- Brown 500 --></div>
    </li>
    <li data-row="2" data-col="4" data-sizex="1" data-sizey="1">
      <div data-view="TimeLocal" data-title="Local Time" style="background-color: #37474f;"><!-- BlueGrey 800 --></div>
    </li>
  </ul>
</div>
