<% content_for(:title) { "Time" } %>
<!-- Colors are from https://www.materialpalette.com/colors -->
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="4" data-sizey="1">
      <div data-view="WorldClock" class="widget-world-clock" style="background-color: #263238;"><!-- BlueGrey 900 --></div>
    </li>
    <li data-row="2" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="localTime" data-title="Local Time" style="background-color: #37474f;"><!-- BlueGrey 800 --></div>
    </li>
    <li data-row="2" data-col="2" data-sizex="1" data-sizey="1">
      <div data-view="UTCTime" data-title="UTC Time" style="background-color: #455a64;"><!-- BlueGrey 700 --></div>
    </li>
    <li data-row="2" data-col="3" data-sizex="1" data-sizey="1">
      <div data-view="UnixTime" data-title="Unix Time" style="background-color: #546e7a;"><!-- BlueGrey 600 --></div>
    </li>
    <li data-row="2" data-col="4" data-sizex="1" data-sizey="1">
      <div data-view="BeatTime" data-title="Internet Time" style="background-color: #607d8b;"><!-- BlueGrey 500 --></div>
    </li>
  </ul>
</div>
